---
import Layout from "../layouts/Layout.astro";
import Icons from "../components/Icons.astro";
---

<Layout title="shade">
  <div
    class="font-lexend flex flex-col items-center rounded-lg bg-white/60 p-4"
  >
    <div class="flex flex-row items-center gap-2 text-black opacity-100">
      <img
        alt="shade pfp"
        src="/images/pfp.png"
        class="h-24 w-24 rounded-full"
      />
      <div class="flex flex-col gap-0 p-0">
        <h1 class="font-semibold md:text-2xl">ripshade</h1>
        <p class="md:text-sm">@coyotes67</p>
        <p class="md:text-base">she/her</p>
      </div>
    </div>
    <div class="flex flex-row gap-1">
      <Icons
        icon="fa:instagram"
        link="https://instagram.com/murderevery1uknow"
      />
      <Icons
        icon="fa7-brands:discord"
        link="https://discord.com/users/1408956378600702042"
      />
      <Icons
        icon="devicon-plain:forgejo"
        link="https://git.canine.tools/glaceon"
      />
    </div>
  </div>
</Layout>
