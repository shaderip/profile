---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Shade">
  <div
    class="font-lexend flex h-screen flex-col items-center justify-center p-4"
  >
    <h1 class="text-red mb-4 text-6xl font-semibold">ripshade</h1>
    <div
      class="align-center flex flex-col-reverse items-center md:max-w-sm md:flex-row"
    >
      <p class="text-2xl text-black">
        i'm shade. i play minecraft and listen to music
        <span class="font-comic-sans font-semibold">:3</span>
      </p>
      <img src="lick.gif" class="h-36" />
    </div>
    <div class="flex flex-col items-center md:max-w-sm md:flex-row">
      <img src="paw.gif" class="h-36" />
      <p class="text-2xl text-black">
        i like cats and canids, and i have a ~7 month old golden retriever
      </p>
    </div>
  </div>
</Layout>
